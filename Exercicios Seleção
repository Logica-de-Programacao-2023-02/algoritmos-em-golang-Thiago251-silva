//Faça um algoritmo que leia um número inteiro e mostre se ele é par ou ímpar.

package main

import "fmt"

func main() {

	var numero int

	fmt.Print("Escolha um número: ")
	fmt.Scan(&numero)

	if numero%2 == 0 {
		fmt.Print("É um número par")
	} else {
		fmt.Print("É um número ímpar")
	}
}

